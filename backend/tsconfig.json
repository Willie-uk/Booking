{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node"],
    "sourceMap": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
